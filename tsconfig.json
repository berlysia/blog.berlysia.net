{
  "extends": "@berlysia/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "declaration": false,
    "noEmitOnError": false,
    "incremental": true
  },
  "exclude": ["**/*.test.ts"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
