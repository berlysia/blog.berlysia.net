{
  "name": "berlysia-net",
  "version": "0.0.0",
  "description": "",
  "author": "berlysia <berlysia@gmail.com>",
  "main": "index.js",
  "license": "MIT",
  "lint-staged": {
    "*.{[jt]s,[jt]sx,[cm][jt]s}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-s build:seed build:partytown build:client build:server",
    "build:partytown": "partytown copylib public/~partytown",
    "build:seed": "run-p 'build:seed:*'",
    "build:seed:local": "tsx --tsconfig ./tsconfig.script.json app/seeds/localBuild.ts",
    "build:seed:remote": "tsx --tsconfig ./tsconfig.script.json app/seeds/remoteBuild.ts",
    "build:client": "vite build --mode client",
    "build:server": "vite build",
    "start": "vite start",
    "lint": "eslint 'app/**/*.{js,ts,jsx,tsx}'",
    "lint:fix": "npm-run-all 'lint -- --fix'",
    "format": "prettier --write '**/*.{json,md,js,ts,jsx,tsx}'",
    "format:check": "prettier --check '**/*.{json,md,js,ts,jsx,tsx}'",
    "test": "jest",
    "test:vrt:ci": "playwright test",
    "test:vrt": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.41.2-focal /bin/bash -c 'yarn test:vrt:ci'",
    "test:vrt:update": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.41.2-focal /bin/bash -c 'yarn test:vrt:ci -u'",
    "clean": "run-p 'clean:*'",
    "clean:dist": "del dist",
    "clean:seed": "tsx --tsconfig ./tsconfig.script.json app/seeds/clean.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "git config --local core.hooksPath .githooks && echo 'githooks installed' || echo 'githooks install failed'",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@berlysia/eslint-config": "^5.0.11",
    "@berlysia/eslint-plugin": "^0.0.1-beta.3",
    "@cloudflare/workers-types": "^4.20240208.0",
    "@hono/vite-cloudflare-pages": "^0.2.4",
    "@hono/vite-dev-server": "^0.5.0",
    "@hono/vite-ssg": "^0.0.1",
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/rollup": "^3.0.0",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@playwright/test": "^1.41.2",
    "@storybook/react": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.3",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/unist": "^3.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "del-cli": "^5.1.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mdast-util-mdx-jsx": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.41.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-logical": "^3.0.1",
    "tsx": "^4.7.1",
    "typescript": "5.4.0-beta"
  },
  "dependencies": {
    "@builder.io/partytown": "^0.9.1",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@hono/react-renderer": "^0.0.2",
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@mdx-js/mdx": "^3.0.0",
    "clsx": "^2.1.0",
    "fs-extra": "^11.2.0",
    "hono": "^4.0.1",
    "honox": "^0.1.0",
    "nanostores": "^0.9.5",
    "p-queue": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "rss-parser": "^3.13.0",
    "to-vfile": "^8.0.0",
    "unified": "^11.0.4",
    "vfile-matter": "^5.0.0",
    "vite": "^5.1.1",
    "zod": "^3.22.4"
  },
  "packageManager": "yarn@4.0.2"
}
