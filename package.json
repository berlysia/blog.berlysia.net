{
  "name": "berlysia-net",
  "version": "0.0.0",
  "description": "",
  "author": "berlysia <berlysia@gmail.com>",
  "main": "index.js",
  "license": "MIT",
  "lint-staged": {
    "*.{[jt]s,[jt]sx,[cm][jt]s}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "serve": "run-s build serve:pages",
    "serve:pages": "cd dist && npx wrangler pages dev .",
    "build": "run-s build:seed build:client build:ssg build:functions",
    "build:seed": "run-p 'build:seed:*'",
    "build:seed:local": "tsx --tsconfig ./tsconfig.script.json app/seeds/localBuild.ts",
    "build:seed:remote": "tsx --tsconfig ./tsconfig.script.json app/seeds/remoteBuild.ts",
    "build:client": "vite build --mode client",
    "build:functions": "vite build --mode functions",
    "build:ssg": "vite build",
    "build:on-deploy": "run-s build copy-functions",
    "copy-functions": "cp -rT dist/functions functions",
    "start": "vite start",
    "lint": "eslint 'app/**/*.{js,ts,jsx,tsx}' --no-warn-ignored --max-warnings 0",
    "lint:fix": "npm-run-all 'lint -- --fix'",
    "format": "prettier --write '**/*.{json,md,js,ts,jsx,tsx}'",
    "format:check": "prettier --check '**/*.{json,md,js,ts,jsx,tsx}'",
    "test": "jest",
    "test:vrt:ci": "playwright test",
    "test:vrt": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.41.2-focal /bin/bash -c 'bun run test:vrt:ci'",
    "test:vrt:update": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.41.2-focal /bin/bash -c 'bun run test:vrt:ci -u'",
    "clean": "run-p 'clean:*'",
    "clean:dist": "del dist",
    "clean:seed": "tsx --tsconfig ./tsconfig.script.json app/seeds/clean.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "git config --local core.hooksPath .githooks && echo 'githooks installed' || echo 'githooks install failed'",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@berlysia/eslint-config": "^7.0.1",
    "@berlysia/eslint-plugin": "^0.0.1-beta.3",
    "@cloudflare/workers-types": "^4.20241112.0",
    "@hono/vite-ssg": "^0.1.0",
    "@mdx-js/loader": "^3.1.0",
    "@playwright/test": "^1.49.0",
    "@resvg/resvg-js": "^2.6.2",
    "@shikijs/rehype": "^1.23.1",
    "@types/fs-extra": "^11.0.4",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.9.3",
    "@types/unist": "^3.0.3",
    "autoprefixer": "^10.4.20",
    "del-cli": "^6.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.15.0",
    "feed": "^4.2.2",
    "lint-staged": "^15.2.10",
    "mdast-util-mdx-jsx": "^3.1.3",
    "npm-run-all2": "^7.0.1",
    "playwright": "^1.49.0",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "tailwindcss-logical": "^3.0.1",
    "tsx": "^4.19.2",
    "typescript": "5.7.2",
    "wrangler": "^3.90.0"
  },
  "dependencies": {
    "@builder.io/partytown": "^0.10.2",
    "@fortawesome/fontawesome-svg-core": "^6.7.1",
    "@fortawesome/free-solid-svg-icons": "^6.7.1",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@mdx-js/mdx": "^3.1.0",
    "budoux": "^0.6.3",
    "clsx": "^2.1.1",
    "fs-extra": "^11.2.0",
    "hono": "^4.6.12",
    "honox": "^0.1.27",
    "p-queue": "^8.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "rss-parser": "^3.13.0",
    "satori": "^0.12.0",
    "to-vfile": "^8.0.0",
    "unified": "^11.0.5",
    "vfile-matter": "^5.0.0",
    "vite": "^5.4.11",
    "zod": "^3.23.8"
  }
}
