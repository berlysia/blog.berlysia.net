{
  "name": "berlysia-net",
  "version": "0.0.0",
  "description": "",
  "author": "berlysia <berlysia@gmail.com>",
  "main": "index.js",
  "license": "MIT",
  "lint-staged": {
    "*.{[jt]s,[jt]sx,[cm][jt]s}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "serve": "run-s build serve:pages",
    "serve:pages": "cd dist && npx wrangler pages dev .",
    "build": "run-s build:seed build:og build:client build:ssg",
    "build:seed": "run-p 'build:seed:*'",
    "build:seed:local": "npx tsx app/seeds/localBuild.ts",
    "build:seed:remote": "npx tsx app/seeds/remoteBuild.ts",
    "build:og": "npx tsx scripts/prebuild-og.ts",
    "build:client": "vite build --mode client",
    "build:functions": "vite build --mode functions",
    "build:ssg": "vite build --mode ssg",
    "build:on-deploy": "run-s build copy-functions",
    "copy-functions": "cp -rT dist/functions functions || true",
    "start": "vite start",
    "lint": "eslint --no-warn-ignored --max-warnings 0",
    "lint:fix": "npm-run-all 'lint -- --fix'",
    "format": "prettier --write '**/*.{json,md,js,ts,jsx,tsx}'",
    "format:check": "prettier --check '**/*.{json,md,js,ts,jsx,tsx}'",
    "test": "jest",
    "test:vrt:ci": "playwright test",
    "test:vrt": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.41.2-focal /bin/bash -c 'pnpm run test:vrt:ci'",
    "test:vrt:update": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.41.2-focal /bin/bash -c 'pnpm run test:vrt:ci -u'",
    "clean": "run-p 'clean:*'",
    "clean:dist": "del dist",
    "clean:seed": "node app/seeds/clean.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "git config --local core.hooksPath .githooks && echo 'githooks installed' || echo 'githooks install failed'",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "@berlysia/eslint-config": "7.2.0",
    "@berlysia/eslint-plugin": "0.0.1-beta.3",
    "@cloudflare/workers-types": "4.20251011.0",
    "@hono/vite-ssg": "0.2.1",
    "@inquirer/prompts": "7.9.0",
    "@mdx-js/loader": "3.1.1",
    "@playwright/test": "1.58.1",
    "@resvg/resvg-js": "2.6.2",
    "@shikijs/rehype": "3.21.0",
    "@types/fs-extra": "11.0.4",
    "@types/hast": "3.0.4",
    "@types/mdast": "4.0.4",
    "@types/node": "24.10.9",
    "@types/unist": "3.0.3",
    "autoprefixer": "10.4.21",
    "del-cli": "7.0.0",
    "esbuild": "0.25.11",
    "eslint": "9.39.2",
    "feed": "5.1.0",
    "lint-staged": "16.2.4",
    "mdast-util-mdx-jsx": "3.2.0",
    "npm-run-all2": "8.0.4",
    "playwright": "1.58.1",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "3.4.19",
    "tailwindcss-logical": "3.0.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "wrangler": "4.43.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "7.1.0",
    "@fortawesome/free-solid-svg-icons": "7.1.0",
    "@fortawesome/react-fontawesome": "3.1.0",
    "@jsdevtools/rehype-toc": "3.0.2",
    "@mdx-js/mdx": "3.1.1",
    "budoux": "0.7.0",
    "cheerio": "1.1.2",
    "clsx": "2.1.1",
    "fs-extra": "11.3.2",
    "hono": "4.11.4",
    "honox": "0.1.49",
    "p-queue": "9.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rehype-accessible-emojis": "0.3.2",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.1",
    "rss-parser": "3.13.0",
    "satori": "0.18.3",
    "to-vfile": "8.0.0",
    "unified": "11.0.5",
    "vfile-matter": "5.0.1",
    "vite": "7.1.11",
    "zod": "4.1.12"
  }
}
