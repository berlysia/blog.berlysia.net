{
  "name": "berlysia-net",
  "version": "0.0.0",
  "description": "",
  "author": "berlysia <berlysia@gmail.com>",
  "main": "index.js",
  "license": "MIT",
  "lint-staged": {
    "*.{[jt]s,[jt]sx,[cm][jt]s}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "run-s build:seed build:partytown build:next",
    "build:partytown": "partytown copylib public/~partytown",
    "build:seed": "run-p 'build:seed:*'",
    "build:seed:local": "tsx --tsconfig ./tsconfig.script.json src/seeds/localBuild.ts",
    "build:seed:remote": "tsx --tsconfig ./tsconfig.script.json src/seeds/remoteBuild.ts",
    "build:next": "next build",
    "start": "next start",
    "lint": "eslint 'src/**/*.{js,ts,jsx,tsx}'",
    "lint:fix": "npm-run-all 'lint -- --fix'",
    "format": "prettier --write '**/*.{json,md,js,ts,jsx,tsx}'",
    "format:check": "prettier --check '**/*.{json,md,js,ts,jsx,tsx}'",
    "test": "jest",
    "test:vrt:ci": "playwright test",
    "test:vrt": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.39.0-focal /bin/bash -c 'yarn test:vrt:ci'",
    "test:vrt:update": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.39.0-focal /bin/bash -c 'yarn test:vrt:ci -u'",
    "clean": "del dist",
    "typecheck": "tsc --noEmit",
    "prepare": "git config --local core.hooksPath .githooks && echo 'githooks installed' || echo 'githooks install failed'",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@berlysia/eslint-config": "^5.0.0",
    "@mdx-js/loader": "^2.3.0",
    "@next/mdx": "^14.0.4-canary.11",
    "@playwright/test": "1.39.0",
    "@storybook/react": "7.5.3",
    "@tsconfig/next": "^2.0.1",
    "@types/fs-extra": "11.0.4",
    "@types/hast": "^2.3.4",
    "@types/mdast": "^3.0.11",
    "@types/node": "18.18.10",
    "@types/react": "18.2.37",
    "@types/unist": "^2.0.6",
    "autoprefixer": "10.4.16",
    "del-cli": "5.1.0",
    "eslint": "8.53.0",
    "eslint-config-next": "^14.0.4-canary.11",
    "jest": "29.7.0",
    "lint-staged": "13.3.0",
    "mdast-util-mdx-jsx": "^2.1.2",
    "npm-run-all": "4.1.5",
    "playwright": "1.39.0",
    "postcss": "8.4.31",
    "prettier": "2.8.8",
    "tailwindcss": "3.3.5",
    "tailwindcss-logical": "^3.0.0",
    "tsx": "^3.13.0",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@builder.io/partytown": "^0.8.0",
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@jsdevtools/rehype-toc": "^3.0.2",
    "clsx": "^1.2.1",
    "fs-extra": "^11.0.0",
    "next": "^14.0.4-canary.11",
    "next-mdx-remote": "^4.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "rss-parser": "^3.12.0",
    "unified": "^10.1.2",
    "zod": "^3.19.1"
  },
  "packageManager": "yarn@4.0.2"
}
